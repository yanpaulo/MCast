@model MCast.WebAPI.Models.MessagingGroup

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>MessagingGroup</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <div id="qrcode"></div>
    <div class="form-inline">
        <div class="form-group">
            <label for="message">Mensagem: </label>
            <input type="text" class="form-control" id="message" placeholder="Mensagem">
        </div>
        <button id="messageSubmit" type="submit" class="btn btn-default">Enviar</button>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
    $(function () {
        jquery('#qrcode').qrcode('@ViewBag.Id');
    });
    $("#messageSubmit").click(function () {
        var id = '@ViewBag.Id';
        var message = $("#message").val();
        if (message) {
            $.post("../SendMessage/" + id, { message: message }, function () {
                $("#message").val('');

            }).fail(function () {
                alert('Não foi possível enviar a mensagem.');
            });
        }
    });
    </script>
}
